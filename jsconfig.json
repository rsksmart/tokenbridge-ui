{
  "allowJs": true,
  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ],
    },
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "**/*"
  ]
}